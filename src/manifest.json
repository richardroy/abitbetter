{
  "manifest_version": 2,

  "name": "ABitBetter",
  "description": "This extension will add a diff summary to the base of a pull request",
  "version": "0.4",

  "content_scripts": [{
    "matches": ["https://bitbucket.org/*"], 
    "js": ["src/content.js"],
    "run_at": "document_end"
  }],

  "permissions": [
    "activeTab",
    "storage"
  ]
}